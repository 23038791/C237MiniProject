    <script>
        // Add JavaScript code here to handle form submission and display success message
        const form = document.getElementById('feedback-form'); // Get form element
        const successMessage = document.getElementById('success-message'); // Get success message element

        form.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent form submission

            // Perform form validation here if needed

            // Simulate form submission
            setTimeout(() => {
                form.reset(); // Reset form fields
                successMessage.style.display = 'block'; // Display success message
            }, 1000); // Simulate 1 second delay
        });
